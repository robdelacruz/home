set ignorecase
set smartcase

set hlsearch
set incsearch

syntax on
set background=dark
colorscheme zenburn

set smarttab
set shiftwidth=4
set tabstop=4

set ai
set si

" Tab Navigation
nnoremap <F7>  :tabprevious<CR>
nnoremap <F8>  :tabnext<CR>
nnoremap <C-t> :tabnew<CR>

nnoremap <C-h> :tabprevious<CR>
nnoremap <C-l> :tabnext<CR>

